<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/moreapps_item_height"
        android:layout_height="@dimen/moreapps_item_height"
        android:gravity="top|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgIconApp"
            android:layout_width="@dimen/moreapps_icon_size"
            android:layout_height="@dimen/moreapps_icon_size"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="MEME Creator"
            android:textSize="@dimen/moreapps_icon_text_size" />
    </LinearLayout>
</LinearLayout>